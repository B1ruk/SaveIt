<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <include
        android:id="@+id/search_toolbar"
        layout="@layout/app_main_toolbar"
        />
    <RelativeLayout
        android:id="@+id/empty_search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/empty_search_article_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:alpha="0.6"
            android:src="@drawable/book_outline"/>

        <TextView
            android:id="@+id/empty_article_search_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/empty_article_image"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_list_view">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/article_search_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"></android.support.v7.widget.RecyclerView>

        <io.start.biruk.saveit.view.widget.fastscroller.FastScroller
            android:id="@+id/article_search_fast_scroller"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            ></io.start.biruk.saveit.view.widget.fastscroller.FastScroller>


    </RelativeLayout>
</LinearLayout>
