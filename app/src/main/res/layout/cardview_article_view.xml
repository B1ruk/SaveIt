<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:background="@color/default_background"
                                    app:cardCornerRadius="4dp"
                                    app:cardElevation="2dp"
                                    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/article_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/default_bg"
            />

        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/article_img"
            android:textStyle="bold"
            tools:text="welcome to xampp"/>

        <Button
            android:id="@+id/tag_content"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/article_title"
            android:layout_below="@+id/article_title"
            android:drawableLeft="@drawable/ic_tag_file_black_24dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Xampp,php,local server"
            android:textAppearance="?android:textAppearanceSmall"
            android:textStyle="italic|bold"/>

        <ImageView
            android:id="@+id/article_favorite_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/tag_content"
            android:src="@drawable/ic_favorite_black_24dp"
            android:textAppearance="?android:textAppearance"/>

        <TextView
            android:id="@+id/article_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/tag_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/text_color_blue"
            android:textAppearance="@style/AppTheme"
            tools:text="mar 05,2018"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>